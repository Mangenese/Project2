      <label for="reviewText">Review</label>
      <textarea class="form-control" id="reviewText" aria-describedby="reviewText" placeholder="Review"></textarea>
    </div>
    <div class="form-group">
      <label for="rating">Rating</label>
      <select class="form-control" id="rating">
        <option default>Default select</option>

        <option value="1">
          1
        </option>
        <option value="2">
          2
        </option>
        <option value="3">
          3
        </option>
        <option value="4">
          4
        </option>
        <option value="5">
          5
        </option>
      </select>
    </div>
    <button id="submit" class="btn btn-primary float-right">Submit</button>
  </form>
</div>

